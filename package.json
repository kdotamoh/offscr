{
  "name": "offscr",
  "version": "1.0.0",
  "main": "index.js",
  "author": "kdotamoh",
  "license": "MIT",
  "scripts": {
    "server:dev": "nodemon --delay 1500ms --signal SIGTERM app.js",
    "server:build": "node app.js",
    "client:dev": "webpack serve --progress --config webpack.config.development.js",
    "client:build": "webpack --progress --config webpack.config.build.js",
    "start:dev": "concurrently --kill-others \"npm run server:dev\" \"npm run client:dev\"",
    "start:prod": "npm run client:build && npm run server:build"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
